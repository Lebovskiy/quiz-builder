generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum QuestionType { 
  SINGLE
  MULTIPLE
  OPEN
}

model Quiz {
  id        String   @id @default(uuid())
  title     String
  createdAt DateTime @default(now())
  questions Question[]  
  answers   Answer[]
}

model Question {
  id        String @id @default(uuid())
  text      String
  quizId    String
  type      QuestionType
  options   String[]
  quiz      Quiz   @relation(fields: [quizId], references: [id])
}

model Answer {
  id          String @id @default(uuid())
  content     Json
  quizId      String
  quiz        Quiz   @relation(fields: [quizId], references: [id])
}

